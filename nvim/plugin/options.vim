set shell=/bin/zsh
set encoding=utf8

set list
set listchars=tab:→\ ,trail:⋅,extends:❯,precedes:❮

set showbreak=↪
set backspace=indent,eol,start

set tabstop=2
set softtabstop=2
set shiftwidth=2

set completeopt=menuone,noinsert,noselect,preview

set expandtab
set smarttab

set number
set relativenumber

set smartcase
set foldmethod=marker
set hidden

set signcolumn=yes

set scrolloff=8
set sidescrolloff=8

set colorcolumn=120
